---
import Favicon from "./Favicon.astro";

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "ALT+ME | CENTRO", 
  description = "Un viaje introspectivo para imaginar y construir un alter ego que se manifiesta mediante tecnologías web." 
} = Astro.props;
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>

  <!-- Dark mode script -->
  <script is:inline>
    // On page load or when changing themes, best to add inline in `head` to avoid FOUC
    if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
      document.documentElement.classList.add('dark')
    } else {
      document.documentElement.classList.remove('dark')
    }
  </script>

  <!-- Open Graph tags -->
  <meta property="og:title" content={title} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://juanfuent-es.github.io/alt-me/" />
  <meta property="og:description" content={description} />
  <meta property="og:image" content="https://juanfuent-es.github.io/alt-me/alt-me-share-img.png" itemprop="image">
  <meta property="og:image" content="https://juanfuent-es.github.io/alt-me/alt-me-share-wa.png" itemprop="image">
  <meta property="og:image:alt" content="ALT+ME | CENTRO Diseño, Cine, Televisión">

  <Favicon />
</head>