---
interface Props {
  prev?: {
    href: string;
    title: string;
  };
  next?: {
    href: string;
    title: string;
  };
}

const { prev, next } = Astro.props;
---

<nav class="w-full mt-8 grid grid-cols-2 gap-4">
  {prev && <a href={prev.href} class="box"><h2>← {prev.title}</h2><Image src={Cover} alt="Rúbrica del proyecto ALT+ME" class="w-full h-full object-cover absolute top-0 left-0 object-center group-hover:scale-110 group-hover:opacity-100 transition-all duration-300 opacity-80" /></a>}
  {next && <a href={next.href} class="box box-landscape"><h2>{next.title} →</h2><Image src={Cover} alt="Rúbrica del proyecto ALT+ME" class="w-full h-full object-cover absolute top-0 left-0 object-center group-hover:scale-110 group-hover:opacity-100 transition-all duration-300 opacity-80" /></a>}
</nav> 