---
import { Image } from 'astro:assets';

interface Props {
  prev?: {
    href: string;
    title: string;
    image?: ImageMetadata;
  };
  next?: {
    href: string;
    title: string;
    image?: ImageMetadata;
  };
}

const { prev, next } = Astro.props;
---

<nav class="w-full mt-8 grid grid-cols-3 gap-4">
  {prev && <a href={prev.href} class="box group">
    <h2>← {prev.title}</h2>
    {prev.image && <Image src={prev.image} alt={`Imagen de ${prev.title}`} class="w-full h-full object-cover absolute top-0 left-0 object-center group-hover:scale-110 group-hover:opacity-100 transition-all duration-300 opacity-80" />}
  </a>}
  {next && <a href={next.href} class="box box-landscape group">
    <h2>{next.title} →</h2>
    {next.image && <Image src={next.image} alt={`Imagen de ${next.title}`} class="w-full h-full object-cover absolute top-0 left-0 object-center group-hover:scale-110 group-hover:opacity-100 transition-all duration-300 opacity-80" />}
  </a>}
</nav> 